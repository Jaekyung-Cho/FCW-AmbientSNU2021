<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/result_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cameraView"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/depth_text"
        android:layout_width="190dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toStartOf="@+id/result_image"
        android:layout_alignTop="@+id/result_image"
        android:layout_alignRight="@+id/result_image"
        android:layout_alignBottom="@+id/result_image"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Model"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/detect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detect"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/autofocus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Focus"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detect" />

</androidx.constraintlayout.widget.ConstraintLayout>